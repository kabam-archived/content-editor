block body
    .topbar
      .fill
        .container
          a.brand(href='#') mywebclass
          ul.nav
            //
                          <li class="active"><a href="#">Intro</a></li>
          ul.nav.secondary-nav
            li
              a
                span#status.label.warning Loading...
            li
              a(href='#') Home
            li
