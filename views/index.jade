extends layout
block body
    .topbar
      .fill
        .container
          a.brand(href='#') mywebclass
          ul.nav
            //
                          <li class="active"><a href="#">Intro</a></li>
          ul.nav.secondary-nav
            li
              a
                span#status.label.warning Loading...
            li
              a(href='#') Home
            li
              a(href='#') About
            li
              a(href='https://github.com/mywebclass/content-editor') Github
    .container(ng-controller='AppCtrl')
      section#intro
        .page-header
          div
            h2 mywebclass â€“ Content Editor.
              div(ng-repeat='s in name')
                Current Site: {{s.siteID}}
            div.dropdown
              a.btn.dropdown-toggle(data-toggle="dropdown", href="#") Content
                span.caret
              ul.dropdown-menu(role="menu", aria-labelledby="dropdownMenu")
                li(ng-repeat='p in content') 
                  a(href="content/{{p.name}}", ng-click="load('/content/' + p.name)", tabindex = "-1") {{p.name}} 
            p
        .row
          .row
            .span7.offset1
              h3 Edit Your Content
              .editContainer
                #editor
            .span7.offset1
              h3 Markdown Preview
              #view
        .row
          .row
            .span7.offset1
              span.help-block
                | Everyone viewing this page can see your edits live.
                button.btn.success(ng-click="saveDoc()") Save Changes
                button.btn.danger Revert Changes

    footer.footer
      .container
        p.pull-right
          | mywebclass
          | &copy 2013
